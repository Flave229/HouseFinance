@using System.Threading.Tasks
@model HouseFinance.Models.PaymentFormHelper
@{
    ViewBag.Title = "Add Payment";
}

<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
</div>

<div class="row">
    <div class="mainContentWrapper">
        @using (Html.BeginForm("AddPayment", "Api", new { billId = Model.Bill.Id }, FormMethod.Post, false, new { @class = "form-horizontal", role = "form" }))
        {

            @Html.HiddenFor(m => m.Bill.Id, Model.Bill.Id)

            <h4>Add a payment here to add it to @Model.Bill.Name : @Model.Bill.Due.ToString("MMMM yyyy")</h4>
            <hr />
            <div class="form-group">
                @Html.Label("Amount:", "Amount", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Payment.Amount, new { @class = "form-control", @Value = (Model.Bill.AmountOwed / Model.Bill.People.Count).ToString("###0.00") })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Paid On", "Paid On", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Payment.Created, DateTime.Now.ToString("yyyy-MM-dd"), new { @class = "form-control", type = "date", Value = DateTime.Now.ToString("yyyy-MM-dd") })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Person:", "Person", new { @class = "col-md-2 control-label" })
                @{
                    var people = Model.People;

                    <div class="col-md-10">
                        @foreach (var person in people)
                        {
                            @Html.RadioButtonFor(m => m.Payment.PersonId, person.Id)
                            @Html.Label(person.FirstName + " " + person.LastName, person.FirstName + " " + person.LastName, new {@style = "padding-left: 1em"})
                            <br/>
                        }
                    </div>
                }
            </div>
            <p style="color:red">@ViewBag.ExceptionMessage</p>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add Payment" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>
